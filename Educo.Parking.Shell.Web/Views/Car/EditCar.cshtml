@using Educo.Parking.Shell.Web.Models;
@{
    ViewData["Title"] = "EditCar";
}
@model CarViewModel

<div class="col m10 s12 l8">
    <h4 class="teal-text">Update your car profile:<br\></h4>
    <form asp-controller="Car" asp-action="UpdateCar" class="col l12 m12 s12">

        <input asp-for="StateNumber" type="hidden">
        <div class="row">
            <div class="input-field col m12 l12 s12">
                <input asp-for="Make" class="validate">
                <label asp-for="Make"></label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col m12 l12 s12">
                <input asp-for="Model" class="validate">
                <label asp-for="Model"></label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col m12 l12 s12">
                <input asp-for="Year" class="validate">
                <label asp-for="Year"></label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col m12 l12 s12">
                <input asp-for="Color" class="validate">
                <label asp-for="Color"></label>
            </div>
        </div>
        <div style="text-align:right">
            <button type="submit" class="waves-effect waves-light btn">Update</button>
        </div>
    </form>
</div>
